def get_num_words(text):
	words = text.split()
	num_words = len(words)
	return num_words
def characters_count(text):
	characters = {}
	lower_case_text = text.lower()
	for character in lower_case_text:
		if character in characters:
			characters[character] += 1
		else:
			characters[character] = 1
	return characters
